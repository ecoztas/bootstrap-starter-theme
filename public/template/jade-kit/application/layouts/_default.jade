doctype html
html
    head

        block page-title
            title='Bootstrap - Starter Theme'

        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')

        block styles
        link(rel="stylesheet", href="public/libraries/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet", href="public/styles/theme.css")

    body

        //- MODULE (Header)
        include ../modules/_header.jade

        main
            block main-content

        //- MODULE (Fotter)
        include ../modules/_footer.jade

        block scripts
        script(src="public/libraries/jquery/jquery-3.5.1.min.js")
        script(src="public/libraries/bootstrap/js/bootstrap.bundle.min.js")
        script(src="public/scripts/theme.js")